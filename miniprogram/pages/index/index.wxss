/* pages/index/index.wxss */
.page {
  width: 100vw;
  height: 100vh;
}

.page-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.emo-title {
  padding: 10px 10px 0;
  line-height: 1.5;
  font-size: 27px;
  font-weight: bold;
  color: #333333;
}

.grid-wrapper {
  flex: 1;
  padding: 10px;
  display: grid;
  grid-gap: 10px;
  grid-template-columns: repeat(2, auto);
  grid-template-rows: repeat(2, auto);
}

.grid-item {
  background-color: lightblue;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5px;
}

.emo-img {
  width: 100px;
  height: 100px;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}

.today-emo {
  flex: 1;
  padding: 10px;
  background-color: lightblue;
  margin: 10px;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.today-emo .emo-img {
  width: 200px;
  height: 200px;
}